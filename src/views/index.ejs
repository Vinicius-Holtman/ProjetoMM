  axios.get('/todo')
    .then(function (response) {
      
      $('#todoListItems').empty();

      response.data.forEach(element => {
        
        let html = `
        <p class="input-checkbox">
          <label>
            <input type="checkbox" class="filled-in" />
            <span class="white-text">${element.title}</span>
          </label>
        </p>
        `;

        $('#todoListItems').append(html);

      });

    })
    .catch(function (error) {
      // handle error
      console.log(error);
    })

