        </div>
      </li>
      <div>

        <li><a href="#!" class="white-text"><i class="material-icons white-text">wb_sunny</i><%= category[0].category %></a></li>
        <li><a href="#!" class="white-text"><i class="material-icons white-text">star_border</i><%= category[1].category %></a></li>
        <li><a href="#!" class="white-text"><i class="material-icons white-text">newspaper</i><%= category[2].category %></a></li>
